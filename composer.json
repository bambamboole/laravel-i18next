{
    "name": "bambamboole/laravel-i18next",
    "description": "A laravel package which provides a HTTP backend for i18next.js",
    "keywords": [
        "bambamboole",
        "laravel-i18next"
    ],
    "homepage": "https://github.com/bambamboole/laravel-i18next",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Manuel Christlieb",
            "email": "manuel@christlieb.eu"
        }
    ],
    "require": {
        "php": "^8.1",
        "bambamboole/laravel-translation-dumper": "^1.0.2",
        "illuminate/http": "^9.0|^10.0|^11.0",
        "illuminate/support": "^9.0|^10.0|^11.0",
        "illuminate/translation": "^9.0|^10.0|^11.0",
        "illuminate/cache": "^9.0|^10.0|^11.0"
    },
    "require-dev": {
        "laravel/pint": "^1.8",
        "phpunit/phpunit": "^10.1"
    },
    "autoload": {
        "psr-4": {
            "Bambamboole\\LaravelI18Next\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bambamboole\\LaravelI18Next\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Bambamboole\\LaravelI18Next\\I18NextServiceProvider"
            ]
        }
    }
}
